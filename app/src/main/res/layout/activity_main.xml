<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Time"
            android:id="@+id/checkBoxSendTime"
            android:checked="false"
            android:onClick="toggleIncludeTime"
            android:clickable="true"
            android:enabled="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timePeriodDetails"
            android:visibility="visible">

            <RadioGroup
                android:id="@+id/radioButtonTimePeriod"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <RadioButton
                    android:id="@+id/radioNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioSpecific"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose a time" />

            </RadioGroup>

        </LinearLayout>

        <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Location"
            android:id="@+id/checkboxLocation"
            android:enabled="false"
            android:checked="false"
            android:visibility="visible"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="72dp" />
    </LinearLayout>

</RelativeLayout>
